<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RoadsideService.Views.HistoryPage"
             Shell.FlyoutBehavior="Disabled"
             Shell.NavBarIsVisible="False"
             Title="HistoryPage">
    <StackLayout>
        <Label Text="Completed Requests" FontAttributes="Bold" />
        <CollectionView ItemsSource="{Binding CompletedRequests}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout>
                        <Label Text="{Binding ServiceProviderName}" />
                        <Label Text="{Binding Date, StringFormat='Date: {0:MM/dd/yyyy}'}" />
                        <Label Text="{Binding Amount, StringFormat='Amount: {0:C}'}" />
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Label Text="Total Earnings" FontAttributes="Bold" />
        <Label Text="{Binding TotalEarnings, StringFormat='Total: {0:C}'}" />
    </StackLayout>
</ContentPage>